{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Пример JSON Schema",
	"description": "Схема для описания процесса, события, задачи, шлюза, ветки и граничного события.",
	"type": "object",
	"properties": {
		"процесс": {
			"type": "object",
			"properties": {
				".имя": {
					"type": "string",
					"description": "Название бизнес-процесса"
				},
				".дорожки": {
					"type": "string",
					"description": "Названия дорожек через '|'"
				}
			},
			"required": [
				".имя",
				".дорожки"
			]
		},
		"событие": {
			"type": "object",
			"properties": {
				".расположение": {
					"type": "string",
					"enum": [
						"Начальное",
						"Промежуточное",
						"Завершающее"
					]
				},
				".тип": {
					"type": "string",
					"enum": [
						"время",
						"эскалация",
						"сигнал",
						"условие",
						"компенсация"
					]
				},
				".текст": {
					"type": "string"
				},
				".прерывающее": {
					"type": "boolean"
				},
				".генерирующее": {
					"type": "string",
					"enum": [
						"да",
						"нет"
					]
				},
				".роль": {
					"type": "integer",
					"minimum": 1,
					"escription":"порядковый номер дорожки на которой будет отображаться объект"
				},
				".ячейка": {
					"type": "string"
				},
				".стрелка": {
					"type": "string",
					"enum": [
						"вниз",
						"вправо",
						"вправо-вниз",
						"вправо-вверх",
						"вправо-вверх-вправо"
					]
				}
			},
			"description": "событие в BPMN2, отображает событие которое свершилось, отвечает на вопрос что произошло",
			"required": [
				".расположение",
				".тип",
				".текст"
			]
		},
		"задача": {
			"type": "object",
			"properties": {
				".тип": {
					"type": "string",
					"enum": [
						"пользователь",
						"сервисная",
						"ручная",
						"получение",
						"отправка"
					]
				},
				".маркер1": {
					"type": "string",
					"enum": [
						"подпроцесс",
						"последовательнао",
						"параллельно",
						"цикл",
						"откат"
					]
				},
				".маркер2": {
					"type": "string",
					"enum": [
						"подпроцесс",
						"последовательнао",
						"параллельно",
						"цикл",
						"откат"
					]
				},
				".текст": {
					"type": "string"
				},
				".роль": {
					"type": "integer",
					"minimum": 1,
					"escription":"порядковый номер дорожки на которой будет отображаться объект"
				},
				".ячейка": {
					"type": "string"
				},
				".стрелка": {
					"type": "string",
					"enum": [
						"вниз",
						"вправо",
						"вправо-вниз",
						"вправо-вверх",
						"вправо-вверх-вправо"
					]
				}
			},
			"required": [
				".тип",
				".текст"
			]
		},
		"шлюз": {
			"type": "object",
			"properties": {
				".тип": {
					"type": "string",
					"enum": [
						"эксклюзивный",
						"параллельный"
					]
				},
				".текст": {
					"type": "string"
				},
				".ячейка": {
					"type": "string"
				},
				".стрелка": {
					"type": "string",
					"enum": [
						"вниз",
						"вправо",
						"вправо-вниз",
						"вправо-вверх",
						"вправо-вверх-вправо"
					]
				}
			},
			"required": [
				".тип",
				".текст"
			]
		},
		"ветка": {
			"type": "object",
			"properties": {
				".безТекста": {
					"type": "string",
					"enum": [
						"Да",
						"Нет"
					]
				},
				"текст": {
					"type": "string"
				}
			},
			"required": [
				".безТекста",
				"текст"
			]
		},
		"граничноеСобытие": {
			"type": "object",
			"properties": {
				".тип": {
					"type": "string",
					"enum": [
						"время",
						"эскалация",
						"сигнал",
						"условие",
						"компенсация"
					]
				}
			},
			"required": [
				".тип"
			]
		}
	},
	"required": [
		"процесс",
		"событие",
		"задача",
		"шлюз",
		"ветка",
		"граничноеСобытие"
	]
}
